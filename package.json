{
  "name": "langd-vscode",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "vscode": "^1.8.0"
  },
  "scripts": {
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "vscode:prepublish": "tsc -p ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/object88/langd-vscode.git"
  },
  "author": "Paul Brousseau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/object88/langd-vscode/issues"
  },
  "homepage": "https://github.com/object88/langd-vscode#readme",
  "activationEvents": [
    "onLanguage:go"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "langd.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "langd.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and langd."
        }
      }
    }
  },
  "main": "./out/src/extension",
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.0.26",
    "eslint": "^4.5.0",
    "mocha": "^3.5.0",
    "typescript": "^2.4.2",
    "vscode": "^1.1.5"
  },
  "dependencies": {
    "vscode-languageclient": "^3.3.0"
  }
}
